{
  "cli": {
    "version": ">= 13.3.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "env": {
          "APP_ENV": "development",
          "STRIPE_ENVIRONMENT": "test"
        }
      },
      "ios": {
        "env": {
          "APP_ENV": "production"
        }
      }
    },
    "production": {
      "android": {
        "buildType": "apk", 
        "gradleCommand": ":app:assembleRelease",
        "env": {
          "STRIPE_ENVIRONMENT": "live"
        }
      },
      "ios": {
        "env": {}
      }
    }
  },
  "submit": {
    "production": {}
  }
}
