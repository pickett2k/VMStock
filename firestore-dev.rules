rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // DEVELOPMENT/TESTING RULES
    // ============================================
    // These rules are more permissive for initial setup
    // Replace with production rules once everything is working
    
    // Allow all authenticated users to read/write during development
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Alternatively, if you want to test the organization structure:
    /*
    match /organizations/{orgId} {
      // Allow authenticated users to create/read/update organizations
      allow read, write: if request.auth != null;
      
      // Allow access to all subcollections for authenticated users
      match /{subcollection}/{docId} {
        allow read, write: if request.auth != null;
      }
    }
    */
  }
}