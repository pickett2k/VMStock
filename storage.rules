rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload organization logos
    match /organization-logos/{organizationId}/{fileName} {
      allow read, write: if request.auth != null 
                         && (fileName == 'logo.jpg' || fileName == 'logo.png' || fileName == 'logo.jpeg');
    }
    
    // Allow authenticated users to read/write their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow all authenticated users to read public files
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Deny all other requests by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}